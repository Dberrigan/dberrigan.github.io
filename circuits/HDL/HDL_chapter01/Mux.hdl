/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not (in=sel, out=notSel);
    And (a=a, b=sel, out=aAndSel);
    And (a=b, b=notSel, out=aAndNotSel);
    Or (a=aAndSel, b=aAndNotSel, out=out);
}